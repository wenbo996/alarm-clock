# alarm-clock

code:
#include <LiquidCrystal.h>

LiquidCrystal lcd(7, 6, 5, 4, 3, 2);

int starttime;
int activetime;
int prevoustime = 0;

int hours = 0;
int mins = 0;

int bhours = 0;
int bmins = 0;

void setup()
{
  lcd.begin(16, 2);
  lcd.clear();
  
  Serial.begin(9600);
  
  pinMode(13, INPUT);
  digitalWrite(13, HIGH);
  pinMode(11, INPUT);
  digitalWrite(11, HIGH);
  pinMode(10, INPUT);
  digitalWrite(10, HIGH);
  
   pinMode(9, INPUT);
  digitalWrite(9, HIGH);
  pinMode(A0, OUTPUT);
  digitalWrite(A0, HIGH);
  
   pinMode(8, OUTPUT);
  
  starttime = millis()/1000;
}

void loop()
{
  while(digitalRead(9) == LOW)
  {
    lcd.setCursor(6,1);
    lcd.print("Alarm");
    lcd.setCursor(6,0);
       if(digitalRead(11) == LOW)
    {
     bmins++;
    } 
    else if (digitalRead(10) == LOW)
    {
      bhours++;
    }
     lcd.setCursor(6,0);
  
  if(bhours < 10)
  {
    lcd.print("0");
    lcd.print(bhours);
  }
  else
  {
    lcd.print(bhours);
  }
    
    lcd.print(":");
    
  if (bmins < 10)
  {
    lcd.print("0");
      lcd.print(bmins);
  }
  else
  {
      lcd.print(bmins);
  }
 if(bmins > 59)
     {
      bhours++;
      bmins = 0;
     } 
     if(bhours > 23)
     {
      bhours = 0; 
     }
     delay(500);
     lcd.clear();
  }
  
  if(digitalRead(13) == LOW)
  {
    
    lcd.setCursor(5,1);
    lcd.print("Set Time");
    lcd.setCursor(6,0);
     if(digitalRead(11) == LOW)
    {
     mins++;
    } 
    else if (digitalRead(10) == LOW)
    {
      hours++;
    }
    

  }
  
      activetime = (millis() / 1000) - starttime;
      if(prevoustime < (activetime - 59))
      {
       mins++;
       prevoustime = activetime;
      } 
      
      if(mins > 59)
     {
      hours++;
      mins = 0;
     } 
     
     if(hours > 23)
     {
      hours = 0; 
     }
  
  
  lcd.setCursor(6,0);
  
  if(hours < 10)
  {
    lcd.print("0");
    lcd.print(hours);
  }
  else
  {
    lcd.print(hours);
  }
    
    lcd.print(":");
    
  if (mins < 10)
  {
    lcd.print("0");
      lcd.print(mins);
  }
  else
  {
      lcd.print(mins);
  }



if(bhours == hours && bmins == mins && bmins != 0)
{
  tone(9, 1000, 200);
  delay(200);
  noTone(9);
delay(200);
}
else
{
    delay(300);
}
  lcd.clear();
 

  Serial.println(mins);
  Serial.println(hours);
  Serial.println("");
  Serial.println(bmins);
  Serial.println(bhours);
  Serial.println("");
  Serial.println(activetime);
  Serial.println(prevoustime);
  Serial.println(starttime);
  Serial.println("");
}
